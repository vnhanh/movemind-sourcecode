<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/defSecondaryColor</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:typeface">serif</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="AppTheme.BlueAccent">
        <item name="colorAccent">@color/defSecondaryColor</item>
    </style>

    <style name="TextStyle_HelperItem" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_title_helper_item</item>
        <item name="android:background">@drawable/bg_rectangle_gray_border_black_corner_2dp</item>
    </style>

    <style name="AppTheme.SeekBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="FloatMenuItem">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">@dimen/marginx2</item>
        <item name="android:paddingTop">@dimen/margin</item>
        <item name="android:paddingBottom">@dimen/margin</item>
        <item name="android:textSize">@dimen/text_size_menu</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--NORMAL SCREEN-->
    <style name="TextStyle_TvTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/mainBrandingColor</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/screen_search_tv_title1_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

    <style name="TextStyle_TvTitle.ScreenSearch" parent="TextStyle_TvTitle">
        <item name="android:textColor">@color/mainBrandingColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/screen_search_tv_title1_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/screen_search_tv_title_margin_start</item>
        <item name="android:layout_marginTop">@dimen/screen_search_tv_title1_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
    </style>

    <style name="TextStyle_TvTitle.ScreenSearchBrand" parent="TextStyle_TvTitle">
        <item name="android:textColor">@color/mainBrandingColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/screen_search_tv_title1_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/screen_search_tv_title_margin_start</item>
        <item name="android:layout_marginTop">@dimen/screen_search_tv_title1_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
    </style>

    <style name="TextStyle_TvTitle.ScreenSearch2" parent="TextStyle_TvTitle">
        <item name="android:textColor">@color/mainBrandingColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/screen_search_tv_title1_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
    </style>

    <style name="TextStyle_TvTitle.SearchResult" parent="TextStyle_TvTitle">
        <item name="android:layout_marginLeft">@dimen/margin_left_tv_title_to_edge_left_in_search_result</item>
        <item name="android:layout_marginTop">@dimen/margin_top_tv_title_in_search_result</item>
    </style>

    <style name="TextStyle_Title2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/title2TextColor</item>
        <item name="android:textStyle">italic</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextStyle_Title2.ScreenSearch" parent="TextStyle_Title2">
        <item name="android:textSize">@dimen/screen_search_tv_title2_text_size</item>
        <item name="android:textColor">@color/title2TextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/screen_search_tv_title2_margin_left</item>
    </style>
    <style name="TextStyle_Title2.ScreenSearchBrand" parent="TextStyle_Title2">
        <item name="android:textSize">@dimen/screen_search_tv_title2_text_size</item>
        <item name="android:textColor">@color/title2TextColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">@dimen/screen_search_tv_title2_margin_left</item>
    </style>

    <style name="TextStyle_Title2.SearchResult" parent="TextStyle_Title2">
        <item name="android:textSize">@dimen/text_size_tv_title2_in_search_result</item>
        <item name="android:layout_marginTop">@dimen/margin_top_title2_in_search_result</item>
    </style>

    <style name="TextStyle_Button_Previous_SearchScreen" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mainBlueTextColor</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/btn_previous_text_size</item>
        <item name="android:paddingLeft">@dimen/btn_previous_padding_left_right</item>
        <item name="android:paddingRight">@dimen/marginx3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_main_height</item>
        <item name="android:layout_marginRight">@dimen/marginx3</item>
    </style>

    <style name="TextStyle_Button_Previous_Now_PLaying" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/btn_previous_text_size</item>
        <item name="android:paddingLeft">@dimen/btn_previous_padding_left_right</item>
        <item name="android:paddingRight">@dimen/marginx3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_main_height</item>
        <item name="android:layout_marginRight">@dimen/marginx3</item>
    </style>


    <style name="TextStyle_SearchPreview_Label" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tv_label_option_text_size</item>
        <item name="android:layout_width">@dimen/tv_label_option_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--DIALOG FRAGMENT-->
    <style name="DialogTheme">
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MySeekBar.PagePreviewVideo" parent="Widget.AppCompat.SeekBar">
        <item name="android:minHeight">@dimen/height_exo_volume_seekbar_page_preview_video</item>
        <item name="android:maxHeight">@dimen/height_exo_volume_seekbar_page_preview_video</item>
    </style>

    <style name="Button_Main" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/btn_previous_text_size</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NormalDialog"  parent="Theme.AppCompat.Light.Dialog"/>

    <style name="NormalDialog.Error" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/red</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textColorPrimary">@color/red</item>
    </style>

</resources>
