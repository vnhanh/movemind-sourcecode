<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="6dp"
    android:paddingEnd="6dp">

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/title_notification"
            android:text="@string/app_name"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/playButton"
                android:layout_width="@dimen/noti_presentation_icon_button_size"
                android:layout_height="@dimen/noti_presentation_icon_button_size"
                android:padding="@dimen/noti_presentation_play_pause_icon_button_padding"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_pause_play_button"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <ImageView
                android:id="@+id/nextButton"
                android:layout_width="@dimen/noti_presentation_icon_button_size"
                android:layout_height="@dimen/noti_presentation_icon_button_size"
                android:padding="@dimen/noti_presentation_icon_button_padding"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_play_next_37dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <ImageView
                android:id="@+id/ccButton"
                android:layout_width="@dimen/noti_presentation_icon_button_size"
                android:layout_height="@dimen/noti_presentation_icon_button_size"
                android:padding="@dimen/noti_presentation_icon_button_padding"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_closed_caption_white_36dp"
                android:tint="@color/defSecondaryColor" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/showNextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_rectangle_blue_corner_24dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/show_next_video"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>