<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/vh_sp_collection_padding"
    android:paddingRight="@dimen/vh_sp_collection_padding">

    <player.wellnesssolutions.com.common.customize_views.MMCircleImageView
        android:id="@+id/imgCollectionLogo"
        android:layout_width="@dimen/search_option_item_image_size"
        android:layout_height="@dimen/search_option_item_image_size"
        android:background="@drawable/bg_sp_image"
        android:contentDescription="@string/collection_logo"
        android:scaleType="centerInside"
        app:bgColor="@color/white"
        app:innerType="square_inner_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:selectType="unselected" />

    <player.wellnesssolutions.com.common.customize_views.MMTextView
        android:id="@+id/tvCollectionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vh_sp_collection_tv_name_margin_top"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/screen_search_preview_rv_item_name_text_size_large"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@id/imgCollectionLogo"
        app:layout_constraintStart_toStartOf="@+id/imgCollectionLogo"
        app:layout_constraintTop_toBottomOf="@id/imgCollectionLogo"
        app:style="btnColor" />

</androidx.constraintlayout.widget.ConstraintLayout>