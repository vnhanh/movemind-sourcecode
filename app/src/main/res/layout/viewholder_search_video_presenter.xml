<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgAvatar"
        android:contentDescription="@string/image_avatar"
        android:layout_width="@dimen/vh_search_presenter_avatar_size"
        android:layout_height="@dimen/vh_search_presenter_avatar_size"
        android:layout_marginLeft="@dimen/vh_search_presenter_avatar_margin"
        android:layout_marginRight="@dimen/vh_search_presenter_avatar_margin"
        app:layout_constraintBottom_toTopOf="@+id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin_top_presenter_title_to_avatar_item_search"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="@dimen/vh_search_presenter_avatar_size"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="@color/mainBrandingColor"
        android:textSize="@dimen/text_size_presenter_name"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imgAvatar"
        app:layout_constraintStart_toStartOf="@id/imgAvatar"
        app:layout_constraintTop_toBottomOf="@+id/imgAvatar" />

    <View
        android:id="@+id/viewPivotTopRight"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@id/imgAvatar"
        app:layout_constraintTop_toTopOf="@+id/imgAvatar" />

    <player.wellnesssolutions.com.common.customize_views.MMImageView
        android:id="@+id/btnShowInfoItemSearchInstructor"
        android:src="@drawable/ic_i_32dp_8dp"
        android:layout_width="@dimen/vh_search_presenter_btn_info_size"
        android:layout_height="@dimen/vh_search_presenter_btn_info_size"
        android:background="@drawable/bg_circle_blue"
        app:layout_constraintBottom_toTopOf="@+id/viewPivotTopRight"
        app:layout_constraintStart_toStartOf="@id/viewPivotTopRight"
        app:tintBackground="true" />

</androidx.constraintlayout.widget.ConstraintLayout>