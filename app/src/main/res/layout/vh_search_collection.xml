<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <player.wellnesssolutions.com.common.customize_views.MMCircleImageView
        android:id="@+id/imgCollectionLogo"
        android:layout_width="@dimen/vh_search_item_circle_item_size_large"
        android:layout_height="@dimen/vh_search_item_circle_item_size_large"
        android:layout_marginStart="@dimen/vh_search_item_circle_item_margin_lagre"
        android:layout_marginEnd="@dimen/vh_search_item_circle_item_margin_lagre"
        android:contentDescription="@string/content_desc_image_preview_video"
        app:bgColor="@color/white"
        app:innerType="square_inner_circle"
        app:layout_constraintBottom_toTopOf="@+id/tvCollectionName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <player.wellnesssolutions.com.common.customize_views.MMTextView
        android:id="@+id/tvCollectionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vh_search_collection_tv_name_margin_top"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/text_size_title_collection_item_search"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imgCollectionLogo"
        app:layout_constraintStart_toStartOf="@+id/imgCollectionLogo"
        app:layout_constraintTop_toBottomOf="@id/imgCollectionLogo"
        app:style="btnColor" />

</androidx.constraintlayout.widget.ConstraintLayout>