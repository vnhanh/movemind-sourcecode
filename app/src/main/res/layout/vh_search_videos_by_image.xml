<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <player.wellnesssolutions.com.common.customize_views.MMCircleImageView
        android:id="@+id/imgSVBItem"
        android:scaleType="centerCrop"
        app:selectType="selected"
        android:layout_width="@dimen/vh_svb_circle_item_size"
        android:layout_height="@dimen/vh_svb_circle_item_size"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvNameSVBItem"
        app:layout_constraintVertical_chainStyle="packed"/>

    <player.wellnesssolutions.com.common.customize_views.MMTextView
        android:id="@+id/tvNameSVBItem"
        app:style="btnColor"
        android:gravity="center_horizontal"
        android:textSize="@dimen/vh_search_item_tv_title_text_size"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vh_svb_tv_name_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSVBItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

</androidx.constraintlayout.widget.ConstraintLayout>