<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootSP"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="player.wellnesssolutions.com.ui.fragment_search_preview.SearchPreviewFragment">

    <player.wellnesssolutions.com.common.customize_views.MMBackGroundView
        android:id="@+id/imgBgSearchScreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/background_image"
        app:dimBackground="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctlTvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dip_10"
        android:layout_marginTop="@dimen/screen_search_tv_title1_margin_top"
        app:layout_constraintEnd_toStartOf="@+id/btnPrevious"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <player.wellnesssolutions.com.common.customize_views.MMCircleImageView
            android:id="@+id/imgCollectionLogoOnTop"
            android:layout_width="@dimen/dip_60"
            android:layout_height="@dimen/dip_60"
            android:contentDescription="@string/content_desc_image_preview_video"
            app:bgColor="@color/white"
            android:visibility="invisible"
            app:innerType="square_inner_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextStyle_TvTitle.ScreenSearch2"
            android:layout_marginStart="@dimen/dip_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title_search_preview"
            app:layout_constraintBottom_toBottomOf="@id/imgCollectionLogoOnTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle2"
            style="@style/TextStyle_TvTitle.ScreenSearch2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dip_10"
            android:text="/"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/imgCollectionLogoOnTop"
            app:layout_constraintStart_toEndOf="@+id/tvTitle"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvTitle3"
            android:textSize="@dimen/dip_27"
            android:textColor="@color/title2TextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/imgCollectionLogoOnTop"
            app:layout_constraintStart_toEndOf="@+id/tvTitle2"
            app:layout_constraintTop_toTopOf="@+id/tvTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <player.wellnesssolutions.com.common.customize_views.MMButton
        android:id="@+id/btnPrevious"
        style="@style/TextStyle_Button_Previous_SearchScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_previous"
        android:text="@string/btn_title_back"
        app:border="true"
        app:layout_constraintBottom_toBottomOf="@id/ctlTvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ctlTvTitle" />

    <!--LINE 1-->
    <player.wellnesssolutions.com.common.customize_views.MMTextView
        android:id="@+id/tvLabel1"
        style="@style/TextStyle_SearchPreview_Label"
        app:layout_constraintBottom_toBottomOf="@+id/rv1"
        app:layout_constraintStart_toStartOf="@id/ctlTvTitle"
        app:layout_constraintTop_toTopOf="@+id/rv1"
        app:style="btnColor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/rv2"
        app:layout_constraintEnd_toEndOf="@id/btnPrevious"
        app:layout_constraintStart_toEndOf="@id/tvLabel1"
        app:layout_constraintTop_toBottomOf="@+id/btnPrevious"
        app:layout_constraintVertical_chainStyle="packed" />

    <!--LINE 2-->
    <player.wellnesssolutions.com.common.customize_views.MMTextView
        android:id="@+id/tvLabel2"
        style="@style/TextStyle_SearchPreview_Label"
        app:layout_constraintBottom_toBottomOf="@+id/rv2"
        app:layout_constraintStart_toStartOf="@id/ctlTvTitle"
        app:layout_constraintTop_toTopOf="@+id/rv2"
        app:style="btnColor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="@dimen/screen_search_preview_rv_margin_top_small"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/rv3"
        app:layout_constraintEnd_toEndOf="@id/btnPrevious"
        app:layout_constraintStart_toEndOf="@+id/tvLabel2"
        app:layout_constraintTop_toBottomOf="@+id/rv1" />

    <!--LINE 3-->
    <player.wellnesssolutions.com.common.customize_views.MMTextView
        android:id="@+id/tvLabel3"
        style="@style/TextStyle_SearchPreview_Label"
        app:layout_constraintBottom_toBottomOf="@+id/rv3"
        app:layout_constraintStart_toStartOf="@id/ctlTvTitle"
        app:layout_constraintTop_toTopOf="@+id/rv3"
        app:style="btnColor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="@dimen/screen_search_preview_rv_margin_top_small"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/btnShowAllVideosResult"
        app:layout_constraintEnd_toEndOf="@id/btnPrevious"
        app:layout_constraintStart_toEndOf="@+id/tvLabel3"
        app:layout_constraintTop_toBottomOf="@+id/rv2"
        app:layout_goneMarginTop="@dimen/screen_search_preview_rv_margin_top_small" />

    <TextView
        android:id="@+id/txtSwipeRightForMoreOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dip_16"
        android:text="@string/swipe_right_for_more_options"
        android:textColor="@color/color_d7"
        android:textSize="18dp"
        android:textStyle="italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnShowResultByMyOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <player.wellnesssolutions.com.common.customize_views.MMButton
        android:id="@+id/btnShowResultByMyOptions"
        style="@style/Button_Main"
        android:layout_width="@dimen/width_btn_show_all_videos_preview_search"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/screen_search_preview_btn_main_margin_packed"
        android:text="@string/btn_show_my_options"
        android:visibility="invisible"
        app:border="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnShowAllVideosResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnShowAllVideosResult" />

    <player.wellnesssolutions.com.common.customize_views.MMButton
        android:id="@+id/btnShowAllVideosResult"
        style="@style/Button_Main"
        android:layout_width="@dimen/width_btn_show_all_videos_preview_search"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screen_search_preview_btn_main_margin_top_small"
        android:text="@string/btn_show_all_videos"
        android:visibility="invisible"
        app:border="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/btnShowResultByMyOptions"
        app:layout_constraintTop_toBottomOf="@+id/rv3"
        app:layout_constraintVertical_chainStyle="packed" />

    <player.wellnesssolutions.com.common.customize_views.MMProgressBar
        android:id="@+id/progressLoadingSearchPreview"
        android:layout_width="@dimen/size_progress_circle"
        android:layout_height="@dimen/size_progress_circle"
        android:orientation="vertical"
        android:theme="@style/AppTheme.BlueAccent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ctlTvTitle" />

    <ImageView
        android:id="@+id/icRefresh"
        android:layout_width="@dimen/ic_refresh_size"
        android:layout_height="@dimen/ic_refresh_size"
        android:contentDescription="@string/icon_refresh"
        android:src="@drawable/ic_refresh_56dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/progressLoadingSearchPreview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressLoadingSearchPreview" />

    <TextView
        android:id="@+id/tvRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/retry"
        android:textColor="@color/title2TextColor"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icRefresh" />

</androidx.constraintlayout.widget.ConstraintLayout>