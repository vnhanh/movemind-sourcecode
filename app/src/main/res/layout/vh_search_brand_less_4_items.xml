<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/viewTopLine"
        app:layout_constraintGuide_percent="0.18"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="1dp" />

    <player.wellnesssolutions.com.common.customize_views.MMCircleImageView
        android:id="@+id/imgBrand"
        app:selectType="selected"
        app:innerType="square_inner_circle"
        android:layout_width="@dimen/size_item_circle_for_1_to_3_items_search_in_row"
        android:layout_height="@dimen/size_item_circle_for_1_to_3_items_search_in_row"
        android:padding="@dimen/padding_circle_item_for_1_to_3_items_search_in_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewTopLine"/>

    <player.wellnesssolutions.com.common.customize_views.MMTextView
        android:id="@+id/tvBrandName"
        app:style="btnColor"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_16"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imgBrand"
        app:layout_constraintBottom_toTopOf="@+id/tvBrandDesc"
        app:layout_constraintStart_toStartOf="@id/imgBrand"
        app:layout_constraintEnd_toEndOf="@id/imgBrand"
        android:layout_marginTop="@dimen/vh_brand_tv_name_margin_top"/>

    <TextView
        android:id="@+id/tvBrandDesc"
        android:gravity="center_horizontal"
        android:textSize="@dimen/vh_brand_tv_desc_text_size"
        android:textColor="@color/title2TextColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vh_brand_tv_desc_margin_top"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/imgBrand"
        app:layout_constraintEnd_toEndOf="@+id/imgBrand"
        app:layout_constraintTop_toBottomOf="@+id/tvBrandName"/>

</androidx.constraintlayout.widget.ConstraintLayout>